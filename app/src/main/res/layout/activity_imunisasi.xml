<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="id.example.sehatin.activities.ImunisasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HERO IMAGE -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"
            android:src="@drawable/imunisasi_header" />


        <!-- HEADER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Imunisasi Anak"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan tanggal lahir anak untuk melihat jadwal imunisasi dan mengatur reminder otomatis."
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="20dp"/>

        <!-- CARD INPUT -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Nama Anak"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/spinner_nama_anak"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir Anak"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/et_tgl_lahir"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="DD / MM / YYYY"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:focusable="false"
                    android:inputType="none"
                    android:drawableEnd="@android:drawable/ic_menu_today"
                    android:drawableTint="@color/colorPrimary" />

                <Button
                    android:id="@+id/btn_hitung_jadwal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:text="Hitung Jadwal &amp; Set Reminder"
                    android:background="@drawable/rounded_button"
                    android:textColor="@android:color/white"
                    android:letterSpacing="0.04"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- INFO CHIPS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_umur_anak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¶ Umur: - "
                android:padding="10dp"
                android:background="@drawable/chip_bg"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_total_vaksin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’‰ Vaksin: - "
                android:padding="10dp"
                android:background="@drawable/chip_bg"/>
        </LinearLayout>


        <!-- PROGRESS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress Imunisasi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <ProgressBar
            android:id="@+id/progress_imunisasi"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:progress="40"
            android:backgroundTint="#E0E0E0"
            android:progressTint="@color/colorPrimary"
            android:layout_marginBottom="24dp"/>


        <!-- JADWAL TEXT -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Berikutnya"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"/>


        <!-- LIST JADWAL -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_jadwal_imunisasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

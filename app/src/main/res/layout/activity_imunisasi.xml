<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBackground"
    tools:context="id.example.sehatin.activities.ImunisasiActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal Imunisasi Anak"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan tanggal lahir anak untuk mendapatkan jadwal imunisasi otomatis:"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTextPrimary"/>

    <EditText
        android:id="@+id/et_tgl_lahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pilih tanggal (DD/MM/YYYY)"
        android:focusable="false"
        android:inputType="none"
        android:drawableEnd="@android:drawable/ic_menu_today"
        android:drawableTint="@color/colorPrimary"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_hitung_jadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Jadwal &amp; Set Reminder"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal Berikutnya"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <ListView
        android:id="@+id/lv_jadwal_imunisasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/colorEmergency"
    tools:context="id.example.sehatin.activities.EmergencyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANGGIL PETUGAS"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tekan dan tahan tombol di bawah hanya dalam KONDISI KRITIS untuk menghubungi kontak darurat."
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btn_call_emergency"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:text="TEKAN DAN TAHAN"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/colorEmergency"
        android:textSize="24sp"
        android:padding="16dp"
        android:drawableTop="@drawable/ic_call_emergency"
        android:drawableTint="@color/colorEmergency"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:textAlignment="center"/>

</LinearLayout>
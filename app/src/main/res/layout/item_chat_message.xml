<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/layout_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:maxWidth="300dp"
        android:layout_gravity="start">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_chatbot_2"
            android:background="@drawable/bg_circle_soft_blue"
            android:padding="6dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_msg_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:padding="12dp"
            android:background="@drawable/bg_bubble_bot"
            android:textColor="@color/colorTextPrimary"
            android:elevation="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:maxWidth="300dp"
        android:layout_gravity="end"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_msg_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi there"
            android:padding="12dp"
            android:background="@drawable/bg_bubble_user"
            android:textColor="@color/white"
            android:elevation="2dp"/>
    </LinearLayout>

</LinearLayout>
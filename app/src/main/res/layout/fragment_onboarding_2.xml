<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="id.example.sehatin.fragments.OnboardingFragment2">

    <!-- ========= BOTTOM SAFE AREA ========= -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>

    <!-- ========= ILLUSTRATION ========= -->
    <ImageView
        android:id="@+id/iv_illustration_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:paddingHorizontal="32dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_onboarding_slide2_kids"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.42"
        tools:ignore="ContentDescription" />

    <!-- ========= TITLE ========= -->
    <TextView
        android:id="@+id/tv_title_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kesehatan Anak Prioritas Utama"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/iv_illustration_2"
        app:layout_constraintBottom_toTopOf="@+id/tv_description_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- ========= DESCRIPTION ========= -->
    <TextView
        android:id="@+id/tv_description_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pantau jadwal imunisasi dan catat tumbuh kembang anak Anda dengan mudah, lengkap dengan pengingat otomatis."
        android:textSize="16sp"
        android:textColor="#666666"
        android:textAlignment="center"
        android:lineSpacingExtra="6dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_2"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ========= DECORATIVE WAVE ========= -->
    <View
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/shape_wave_blue"
        android:layout_marginEnd="-80dp"
        android:layout_marginBottom="-80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="id.example.sehatin.fragments.OnboardingFragment4">

    <!-- ========= SAFE AREA BOTTOM ========= -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <!-- SKIP -->
<!--    <TextView-->
<!--        android:id="@+id/tvSkip"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Lewati"-->
<!--        android:textStyle="bold"-->
<!--        android:textSize="14sp"-->
<!--        android:layout_margin="20dp"-->
<!--        android:padding="6dp"-->
<!--        android:textColor="@color/colorAccent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"/>-->

    <!-- ========= ILLUSTRATION ========= -->
    <ImageView
        android:id="@+id/iv_onboard_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:paddingHorizontal="32dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_onboarding_slide4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.42"
        tools:ignore="ContentDescription"/>

    <!-- ========= TITLE ========= -->
    <TextView
        android:id="@+id/tv_title_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ayo Mulai!"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_onboard_4"
        app:layout_constraintBottom_toTopOf="@+id/tv_description_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ========= DESCRIPTION ========= -->
    <TextView
        android:id="@+id/tv_description_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Masuk atau daftar untuk mulai menggunakan semua fitur Sehatin."
        android:textSize="16sp"
        android:textColor="#666666"
        android:textAlignment="center"
        android:lineSpacingExtra="6dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_4"
        app:layout_constraintBottom_toTopOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ========= LOGIN BUTTON ========= -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/btn_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ========= REGISTER BUTTON ========= -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Daftar"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/guideline_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ========= DECORATIVE WAVE ========= -->
    <View
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/shape_wave_pink"
        android:layout_marginEnd="-80dp"
        android:layout_marginBottom="-80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
